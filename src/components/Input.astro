---
interface Props {
	label?: string;
	name?: string;
	type?: string;
	placeholder?: string;
	value?: string;
}
const { label, name, type, placeholder, value } = Astro.props;
---
<div class="mb-3">
	<label for={name} class="block text-sm/6 font-medium text-gray-900">{label}</label>
	<div class={`flex items-center rounded-md bg-white outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600 ${type === 'color' ? '' : 'pl-3'}`}>
     <input 
     type={type} 
     name={name} 
     id={name} 
     class={`block min-w-0 grow text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6 ${type === 'color' ? '' : 'py-1.5 pr-3 pl-1'}`} 
     placeholder={placeholder} 
     value={value} >
   </div>
</div>